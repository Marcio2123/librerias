<body>
  <header>
    <h1>Tienda Estilo Temu</h1>
  </header>

  <div class="container">
    <div id="loginScreen" class="login">
      <h2>Iniciar sesión</h2>
      <input id="loginEmail" placeholder="Correo" /><br>
      <input id="loginPassword" type="password" placeholder="Contraseña" /><br>
      <button onclick="login()">Entrar</button>
      <p>¿No tienes cuenta? <a href="#" onclick="showRegister()">Regístrate</a></p>
    </div>

    <div id="registerScreen" class="register">
      <h2>Registro</h2>
      <input id="regName" placeholder="Nombre" /><br>
      <input id="regLastName" placeholder="Apellido" /><br>
      <input id="regEmail" placeholder="Correo" /><br>
      <input id="regPassword" type="password" placeholder="Contraseña" /><br>
      <button onclick="register()">Registrar</button>
      <p>¿Ya tienes cuenta? <a href="#" onclick="showLogin()">Inicia sesión</a></p>
    </div>

    <div id="adminScreen" class="admin">
      <h2>Panel de Administrador</h2>
      <h3>Agregar nuevo producto</h3>
      <input id="prodName" placeholder="Nombre del producto" /><br>
      <input id="prodPrice" type="number" placeholder="Precio" /><br>
      <input id="prodImage" placeholder="URL de la imagen" /><br>
      <button onclick="addProduct()">Agregar Producto</button>
      <h3>Productos actuales</h3>
      <div id="adminProducts"></div>
      <button class="logout-btn" onclick="logout()">Cerrar sesión</button>
    </div>

    <div id="shopScreen" class="shop">
      <h2>Bienvenido a la tienda</h2>
      <input id="searchBar" placeholder="Buscar producto..." oninput="searchProducts()" /><br>
      <div id="shopProducts"></div>
      <button class="logout-btn" onclick="logout()">Cerrar sesión</button>
    </div>
  </div>

  <script>
    const ADMINS = [
      { email: 'admin@tienda.com', password: 'admin123' },
      { email: 'moises@lbhtech.com', password: 'moisespwd' }
    ];

    let PRODUCTS = [
      { id: 1, name: 'Camisa casual', price: 25000, img: 'https://via.placeholder.com/150' },
      { id: 2, name: 'Zapatos deportivos', price: 90000, img: 'https://via.placeholder.com/150' },
      { id: 3, name: 'Reloj elegante', price: 120000, img: 'https://via.placeholder.com/150' }
    ];

    let currentUser = null;

    function showLogin() {
      hideAll();
      document.getElementById('loginScreen').style.display = 'block';
    }

    function showRegister() {
      hideAll();
      document.getElementById('registerScreen').style.display = 'block';
    }

    function showAdmin() {
      hideAll();
      document.getElementById('adminScreen').style.display = 'block';
      renderAdminProducts();
    }

    function showShop() {
      hideAll();
      document.getElementById('shopScreen').style.display = 'block';
      renderShopProducts(PRODUCTS);
    }

    function hideAll() {
      document.querySelectorAll('.login, .register, .admin, .shop').forEach(e => e.style.display = 'none');
    }

    function register() {
      const email = document.getElementById('regEmail').value;
      const password = document.getElementById('regPassword').value;
      const name = document.getElementById('regName').value;
      const lastname = document.getElementById('regLastName').value;
      if (!email || !password || !name || !lastname) return alert('Completa todos los campos');
      localStorage.setItem(`user_${email}`, JSON.stringify({ email, password, name, lastname }));
      alert('Registrado con éxito');
      showLogin();
    }

    function login() {
      const email = document.getElementById('loginEmail').value;
      const password = document.getElementById('loginPassword').value;

      const admin = ADMINS.find(a => a.email === email && a.password === password);
      if (admin) {
        currentUser = email;
        showAdmin();
        return;
      }

      const user = JSON.parse(localStorage.getItem(`user_${email}`));
      if (user && user.password === password) {
        currentUser = email;
        showShop();
        return;
      }

      alert('Correo o contraseña incorrectos');
    }

    function logout() {
      currentUser = null;
      showLogin();
    }

    function addProduct() {
      const name = document.getElementById('prodName').value;
      const price = document.getElementById('prodPrice').value;
      const img = document.getElementById('prodImage').value;
      if (!name || !price || !img) return alert('Completa todos los campos');
      PRODUCTS.push({ id: Date.now(), name, price, img });
      renderAdminProducts();
      alert('Producto agregado');
    }

    function renderAdminProducts() {
      const cont = document.getElementById('adminProducts');
      cont.innerHTML = PRODUCTS.map(p => `
        <div class='product-card'>
          <img src='${p.img}' alt='${p.name}'><br>
          <strong>${p.name}</strong><br>
          $${p.price}
        </div>
      `).join('');
    }

    function renderShopProducts(products) {
      const cont = document.getElementById('shopProducts');
      cont.innerHTML = products.map(p => `
        <div class='product-card'>
          <img src='${p.img}' alt='${p.name}'><br>
          <strong>${p.name}</strong><br>
          $${p.price}
        </div>
      `).join('');
    }

    function searchProducts() {
      const term = document.getElementById('searchBar').value.toLowerCase();
      const filtered = PRODUCTS.filter(p => p.name.toLowerCase().includes(term));
      renderShopProducts(filtered);
    }

    showLogin();
  </script>
</body>
</html>
